<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cursa4.Views.Login"
             Title="Login">


    <StackLayout Padding="20" VerticalOptions="Center">
        <Frame Padding="20" BackgroundColor="#FFFFFF" CornerRadius="8" HasShadow="True">
            <StackLayout>
                <Entry x:Name="LoginEntry" Placeholder="Введите логин" Margin="10" BackgroundColor="White" PlaceholderColor="#808080" TextColor="#333333" />
                <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" Margin="10" BackgroundColor="White" PlaceholderColor="#808080" TextColor="#333333" />
                <Button Text="Войти" Margin="10" Padding="10" BackgroundColor="#007BFF" TextColor="White" FontAttributes="Bold" CornerRadius="8" Clicked="OnLoginButtonClicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>